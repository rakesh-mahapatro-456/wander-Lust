<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/css/listing.css">

<div class="container mt-5">
  <!-- Listing Header -->
  <h2 class="listing-header"><%= listing.title %></h2>
  <img src="<%= listing.image.url %>" class="listing-image" alt="listing image" />

  <!-- Listing Info -->
  <div class="listing-info">
    <p><strong>Owner:</strong> @<%= listing.owner.username %></p>
    <p><strong>Description:</strong> <%= listing.description %></p>
    <p><strong>Price:</strong> &#8377; <%= listing.price.toLocaleString("en-IN") %></p>
    <p><strong>Location:</strong> <%= listing.location %>, <%= listing.country %></p>

    <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
    <div class="btn-group-custom">
      <a href="/listings/<%= listing._id %>/edit" class="btn-custom btn-edit">Edit Listing</a>
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return confirm('Are you sure?')">
        <button type="submit" class="btn-custom btn-delete">Delete Listing</button>
      </form>
    </div>
    <% } %>
  </div>

  <!-- Review Section -->
  <% if (currUser) { %>
  <hr />
  <h3 class="section-title">Leave a Review</h3>
  <form action="/listings/<%= listing._id %>/reviews" method="POST" class="review-form mb-4" novalidate>
    <div class="mb-3">
      <label for="rating">Rating</label>
      <fieldset class="starability-slot">
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating."/>
        <% for (let i = 1; i <= 5; i++) { %>
        <input type="radio" id="rate<%= i %>" name="review[rating]" value="<%= i %>"/>
        <label for="rate<%= i %>" title="<%= ['Terrible','Not good','Average','Very good','Amazing'][i-1] %>"><%= i %> star</label>
        <% } %>
      </fieldset>
    </div>
    <div class="mb-3">
      <label for="comment">Comment</label>
      <textarea name="review[comment]" id="comment" rows="4" class="form-control" required></textarea>
      <div class="invalid-feedback">Please add a comment.</div>
    </div>
    <button type="submit" class="btn-custom btn-edit">Submit Review</button>
  </form>
  <% } %>

  <% if (listing.reviews.length > 0) { %>
  <h3 class="section-title">Reviews</h3>
  <div class="review-list">
    <% for (let review of listing.reviews) { %>
    <div class="review-item">
      <h6>@<%= review.author.username %></h6>
      <div class="review-stars"><%= '★'.repeat(review.rating) + '☆'.repeat(5-review.rating) %></div>
      <p><%= review.comment %></p>
      <% if(currUser && currUser._id.equals(review.author._id)) { %>
      <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
        <button>Delete</button>
      </form>
      <% } %>
    </div>
    <% } %>
  </div>
  <% } %>

  <!-- Map Section -->
  <div class="my-5 text-center">
    <h3 class="section-title">Where You'll Be</h3>
    <div id="map"></div>
  </div>

  <script>
    const MAPTILER_KEY = "<%= maptilerKey %>";
    const COORDINATES = <%= JSON.stringify(coordinates) %>;
  </script>
</div>
